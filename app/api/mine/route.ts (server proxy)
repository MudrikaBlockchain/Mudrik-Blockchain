import { NextResponse } from 'next/server'

export async function POST(req: Request) {
  const MDK_BACKEND = process.env.MDK_BACKEND || 'http://localhost:7000'
  try {
    const r = await fetch(MDK_BACKEND + '/mine', { method: 'POST' })
    const j = await r.json()
    return NextResponse.json(j)
  } catch (e:any) {
    return NextResponse.json({ error: 'proxy failed', detail: e.message })
  }
}
